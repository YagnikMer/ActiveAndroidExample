<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.worldmer.activeandroidexample.MainActivity">

    <TextView
        android:layout_margin="24.0dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center"
        android:text="Create Record" />

    <EditText
        android:layout_margin="18.0dip"
        android:id="@+id/edtcountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Country" />

    <EditText
        android:layout_margin="18.0dip"
        android:id="@+id/edtcapital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Capital" />

    <EditText
        android:layout_margin="18.0dip"
        android:id="@+id/edtcurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Currency" />

    <Button
        android:layout_margin="18.0dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btncreate"
        android:textSize="20sp"
        android:text="Create"/>
</LinearLayout>
